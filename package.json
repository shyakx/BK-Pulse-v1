{
  "name": "bk-pulse",
  "version": "1.0.0",
  "description": "BK Pulse â€“ Role-based Churn Intelligence Platform",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently -n \"SERVER,CLIENT\" -c \"blue,green\" \"npm run server\" \"npm run client\"",
    "dev:fast": "concurrently -n \"SERVER,CLIENT\" -c \"blue,green\" \"npm run server:fast\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "server:fast": "cd server && node index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "setup": "node setup.js",
    "setup-db": "cd server && node setup-db.js",
    "start": "cd server && npm start",
    "deploy": "npm run build && cd server && npm start"
  },
  "keywords": ["churn", "retention", "banking", "analytics"],
  "author": "Steven SHYAKA",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
